<h1>All our Flats</h1>
<p>All <%= @flats.count %> flats.</p>

<div class="container-fluid pl-0">
  <% @flats.each_slice(3) do |row| %>
    <div class="row mt-2 mb-4">
      <% row.each do |flat| %>
        <div class="col-sm-4 d-flex">
          <div class="card flex-fill">
            <img class="card-img-top" src="https://source.unsplash.com/random" alt="Card image cap">
            <div class="card-body bg-light">
              <h5 class="card-title"><%= flat.name %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h6>
              <div class="d-flex">
                <div class="d-flex">
                  <i class="material-icons">people</i>
                  <span><%= flat.number_of_guests %></span>
                </div>
                <div class="d-flex ml-3">
                  <i class="material-icons">attach_money</i>
                  <span><%= flat.price_per_night %></span>
                </div>
              </div>
            </div>
            <div class="card-footer">
              <%= link_to "More info", flat_path(flat), class: "card-link" %>
              <%= link_to "Edit", root_path, class: "card-link text-warning" %>
              <%= link_to "Remove", root_path, class: "card-link text-danger" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
