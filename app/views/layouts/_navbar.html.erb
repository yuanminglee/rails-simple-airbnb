<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://cdn3.iconfinder.com/data/icons/popular-services-brands/512/airbnb-512.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <%= form_tag root_path, method: 'get', class: 'form-inline my-2 my-lg-0' do %>
        <%= text_field_tag :query, params[:query], class: 'form-control mr-sm-2' %>
        <%= submit_tag 'Search', class: 'btn btn-outline-success my-2 my-sm-0' %>
      <% end %>
      <%= link_to "Add Flat", new_flat_path, class: "btn btn-outline-primary ml-2 my-2 my-sm-0" %>
    </ul>
  </div>
</div>
